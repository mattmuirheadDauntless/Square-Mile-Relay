{% if currentUser %}
    {% redirect 'account/profile' %}
{% endif %}

{% extends "_layout" %}

{% import "_includes/forms/formFields" as formFields %}

{% block content %}

    {% include "_includes/_page-header" %}
    {% include "_includes/_cta-banner" %}

    <div class="container login-page text-center">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>{{ 'Forgot Password'|t }}</h2>

                <form method="post" accept-charset="UTF-8">
                    {{ getCsrfInput() }}
                    <input type="hidden" name="action" value="users/forgotPassword">
                    <input type="hidden" name="redirect" value="">

                    <div class="input-wrapper">
                    {{ formFields.input({
                        id:          'loginName',
                        name:        'loginName',
                        value:       craft.session.rememberedUsername,
                        placeholder: 'Email'
                    }) }}
                    </div>

                    {% if errors is defined %}
                        <ul class="errors">
                            {% for error in errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}

                    <input type="submit" value="{{ 'Submit'|t }}" class="btn btn-orange btn-long">
                </form>

            </div>
        </div>

    </div>

{% endblock %}
