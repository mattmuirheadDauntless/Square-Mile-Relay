{% if currentUser %}
    {% redirect 'account/profile' %}
{% endif %}

{% extends "_layout" %}

{% import "_includes/forms/formFields" as formFields %}

{% block content %}

    {% include "_includes/_page-header" %}
    {% include "_includes/_cta-banner" %}

    <div class="container login-page text-center">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <h2>{{ 'Login'|t }}</h2>

                <form method="post" accept-charset="UTF-8">
                    {{ getCsrfInput() }}
                    <input type="hidden" name="action" value="users/login">

                    <div class="input-wrapper">
                        {% set EmailLabel = 'Email'|t %}

                        {{ formFields.input({
                            id:          'loginName',
                            name:        'loginName',
                            value:       craft.session.rememberedUsername,
                            placeholder: EmailLabel
                        }) }}
                    </div>

                    <div class="input-wrapper">
                        {% set PasswordLabel = 'Password'|t %}

                        {{ formFields.input({
                            id:          'password',
                            name:        'password',
                            type:        'password',
                            placeholder: PasswordLabel
                        }) }}
                    </div>

                    <button type="submit" class="btn btn-orange btn-long">{{ 'Log In'|t }}</button>
                </form>

            </div>
        </div>

    </div>

{% endblock %}
